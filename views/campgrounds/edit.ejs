<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%=campground.name%>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground.id%>/?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3"><label for="name" class="form-label">Name:</label>
                    <input type="text" name="campground[name]" class="form-control" id="name"
                        value="<%=campground.name%>" required>
                        <div class="invalid-feedback">
                            Name is required!
                          </div>
                    </div>
                <div class="mb-3"><label for="location" class="form-label">Location:</label>
                    <input type="text" name="campground[location]" class="form-control" id="location"
                        value="<%=campground.location%>" required>
                        <div class="invalid-feedback">
                            Location is required!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="campground[images]" class="form-label">Add more images</label>
                        <input class="form-control" type="file" id="campground[images]" name="campground[images]" multiple>
                      </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" aria-label="price" id="price" placeholder="0.00"
                            name="campground[price]" value="<%=campground.price%>" required>
                            <div class="invalid-feedback">
                                Price is required!
                               </div>
                        </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="campground[description]" class="form-control" id="description" cols="30"
                        rows="5" required><%=campground.description%></textarea>
                        <div class="invalid-feedback">
                            Provide a description!
                          </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img,i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" id="<%=i%>" value="<%=img.filename%>">
                        <label for="<%=i%>">Delete?</label>
                    </div>
                   
                   <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
            </form>
        </div>
    </div>